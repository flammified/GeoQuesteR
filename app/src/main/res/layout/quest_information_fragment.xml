<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:background="@color/primary">

        <TextView
            android:id="@+id/info_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Information"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_quest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/info_description"
            android:text="Hogeschool Utrecht"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_quest_coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_quest_name"
            android:text="N52 10.000 E005 10.000"
            />
        <ImageButton
            android:id="@+id/navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/go" />

    </RelativeLayout>
    <View style="@style/Divider"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Description"/>
    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:layout_margin="10dp"
        android:text="Description"/>


</LinearLayout>